{{#if ads}}
    {{#each ads}}
        <figure class="snip1492">
            <img src="{{images}}"/>
            <figcaption>
                <h3>{{title}}</h3>
                <p>{{description}}</p>
                <div class="price">
                    {{price}} BGN
                </div>
            </figcaption>
            <a href="#/ads/details/{{_id}}">Click to review</a>
        </figure>
    {{/each}}
{{else}}
    No Ads
{{/if}}