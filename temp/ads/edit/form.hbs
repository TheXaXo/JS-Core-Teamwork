<form class="form-horizontal" method="POST" action="#/edit/:{{id}}">
    <fieldset>
        <legend>Edit Ad</legend>
        <div class="form-group">
            <label class="col-sm-4 control-label">Title</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="title" name="title" value="{{title}}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Description</label>
            <div class="col-sm-4">
                <textarea class="form-control" id="description" name="description">{{description}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">Brand</label>
            <div class="col-sm-4">
                <select class="form-control" id="brand" name="brand">
                <!--{{#each categories}}-->
                    <!--<option-->
                    <!--value="{{this.id}}">{{this.name}}-->
                    <!--</option>-->
                        <!--{{/each}}-->
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">Model</label>
            <div class="col-sm-4">
                <select class="form-control" id="model" name="model">
                <!--{{#each categories}}-->
                    <!--<option-->
                    <!--value="{{this.id}}">{{this.name}}-->
                    <!--</option>-->
                        <!--{{/each}}-->
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">City</label>
            <div class="col-sm-4">
                <select class="form-control" id="city" name="city">
                <!--{{#each categories}}-->
                    <!--<option-->
                    <!--value="{{this.id}}">{{this.name}}-->
                    <!--</option>-->
                        <!--{{/each}}-->
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Mileage</label>
            <div class="col-sm-4 ">
                <input type="number" class="form-control" id="mileage" value="{{mileage}}" name="mileage">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Price</label>
            <div class="col-sm-4 ">
                <input type="number" class="form-control" id="price" name="price" value="{{price}}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Images</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="images" value="{{images}}"
                       name="images">
            </div>
        </div>
