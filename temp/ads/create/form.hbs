<form class="form-horizontal" method="POST" action="#/create">
    <fieldset>
        <legend>Create Ad</legend>
        <div class="form-group">
            <label class="col-sm-4 control-label">Title</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="title" placeholder="Title" name="title" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Description</label>
            <div class="col-sm-4">
                <textarea class="form-control" id="description" name="description" rows="10" required></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">Brand</label>
            <div class="col-sm-4">
                <select class="form-control" id="brand" name="brand">
                <!--{{#each categories}}-->
                    <!--<option-->
                    <!--value="{{this.id}}">{{this.name}}-->
                    <!--</option>-->
                        <!--{{/each}}-->
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">Model</label>
            <div class="col-sm-4">
                <select class="form-control" id="model" name="model">
                <!--{{#each categories}}-->
                    <!--<option-->
                    <!--value="{{this.id}}">{{this.name}}-->
                    <!--</option>-->
                        <!--{{/each}}-->
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label"
                   for="category">City</label>
            <div class="col-sm-4">
                <select class="form-control" id="city" name="city">
                <!--{{#each categories}}-->
                    <!--<option-->
                    <!--value="{{this.id}}">{{this.name}}-->
                    <!--</option>-->
                        <!--{{/each}}-->
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Mileage</label>
            <div class="col-sm-4 ">
                <input type="number" class="form-control" id="mileage" placeholder="Mileage (in km.)" name="mileage" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Price</label>
            <div class="col-sm-4 ">
                <input type="number" class="form-control" id="price" placeholder="Price (in BGN)" name="price" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Image</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="images" placeholder="Image URL"
                       name="images">
            </div>
        </div>
        <!--<div class="form-group">-->
        <!--<label class="control-label col-sm-4">Picture</label>-->
        <!--<div class="col-sm-4">-->
        <!--<input class="form-control" type="file" name="photo" required>-->
        <!--</div>-->
        <!--</div>-->
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <a class="btn btn-default" href="#/home">Cancel</a>
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </fieldset>
</form>