<form class="form-horizontal" method="post" action="#/user/edit/{{data.username}}">
    <fieldset>
        <legend>Edit Profile</legend>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="inputUsername">Username</label>
            <div class="col-sm-4 ">
                <input disabled class="form-control" id="inputUsername" value="{{data.username}}"
                       name="username">
            </div>
        </div>
        {{#if userRole}}
            <div class="form-group">
                <label class="col-sm-4 control-label" for="inputPoints">Points</label>
                <div class="col-sm-4 ">
                    <input class="form-control" id="inputPoints" value="{{data.points}}"
                           name="points">
                </div>
            </div>
        {{/if}}
        <div class="form-group">
            <label class="col-sm-4 control-label">Avatar</label>
            <div class="col-sm-4">
                <input class="form-control" id="avatar" {{#if data.avatar}}value="{{data.avatar}}"{{else}}
                       placeholder="Avatar URL"{{/if}}
                       name="avatar">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label">First Name</label>
            <div class="col-sm-4 ">
                <input class="form-control" id="firstName" value="{{data.fName}}" name="firstName">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Last Name</label>
            <div class="col-sm-4 ">
                <input class="form-control" id="lastName" value="{{data.lName}}" name="lastName">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Email</label>
            <div class="col-sm-4 ">
                <input disabled class="form-control" id="email" value="{{data.email}}" name="email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Phone Number</label>
            <div class="col-sm-4 ">
                <input class="form-control" id="phone" value="{{data.phone}}" name="phone">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <a class="btn btn-default" href="#/user/details/{{data.username}}">Cancel</a>
                <button class="btn btn-success">Edit</button>
            </div>
        </div>
    </fieldset>
</form>